<li class="mb-4">
    {% if showQuestion|default(false) %}
        <a href="{{ path('questions.show', {slug: answer.question.slug}) }}" class="mb-1 link-secondary">
            <strong>Question:</strong>
            {{ answer.questionText }}
        </a>
    {% endif %}
    <div class="d-flex justify-content-center">
        <div class="mr-2 pt-2">
            <img src="/images/tisha.png" width="50" height="50">
        </div>
        <div class="mt-3">
            <small>
                {{ answer.createdAt|ago }}
            </small>
        </div>
        <div class="mr-3 pt-2">
            {{ answer.content|parse_markdown }}
            <p>{{ answer.username }}</p>
        </div>
        <div class="vote-arrows flex-fill pt-2" style="min-width: 90px;">
            <form action="{{ path('answers.vote', {'answer' : answer.id}) }}" method="post">
                <button class="vote-up" name="direction" value="up"><i class="far fa-arrow-alt-circle-up"></i></button>
                <button class="vote-down" name="direction" value="down"><i class="far fa-arrow-alt-circle-down"></i></button>
            </form>
            <span>{{ answer.votesString }}</span>
        </div>
    </div>
</li>
